section.certificates
  .container
    header.certificates__header
      h2.certificates__title Аттестаты

      .certificates__controls
        button.certificates__prev.btn-navigate.btn-navigate_color_primary_dark(type="button" aria-label="Назад")
          svg(class="btn-navigate__icon icon" width="24" height="24")
            use(xlink:href="wp-content/themes/trading/august/img/svg/symbol/sprite.svg#chevron-left")

        button.certificates__next.btn-navigate.btn-navigate_color_primary(type="button" aria-label="Вперед")
          svg(class="btn-navigate__icon icon" width="24" height="24")
            use(xlink:href="wp-content/themes/trading/august/img/svg/symbol/sprite.svg#chevron-right")

  .certificates__bottom.container
    .certificates__slider.swiper-container
      .swiper-wrapper
        .swiper-slide(data-src="wp-content/themes/trading/august/img/certificates/pervakov/1.png")
          img.certificates__picture(src="wp-content/themes/trading/august/img/certificates/pervakov/1.png" alt="" width="371" height="528")
