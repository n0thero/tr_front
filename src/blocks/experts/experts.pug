      .experts__list.swiper-wrapper
        .experts__item.swiper-slide
          picture.experts__item-picture
            source(
              media="(min-width: 1024px)"
              srcset="wp-content/themes/trading/august/img/experts/experts-1.jpg, wp-content/themes/trading/august/img/experts/experts-1@2x.jpg 2x"
            )
            source(
              media="(min-width: 500px)"
              srcset="wp-content/themes/trading/august/img/experts/experts-1-md.jpg, wp-content/themes/trading/august/img/experts/experts-1-md@2x.jpg 2x"
            )
