.sidebar.offcanvas.offcanvas-start(id="sidebar" tabindex="-1" data-bs-keyboard="false")
  .sidebar__inner
    button.sidebar__close.btn-close(type="button" data-bs-dismiss="offcanvas" aria-label="Закрыть")
      svg(class="sidebar__close-icon icon" width="32" height="32")
        use(xlink:href="wp-content/themes/trading/august/img/svg/symbol/sprite.svg#plus-circle")

    a.sidebar__logo.logo(href="/")
      include ../../img/sidebar-logo.svg

    nav
      h2.sidebar__title Разделы

      ul.sidebar__menu
        li.sidebar__menu-item
          a.sidebar__menu-link.sidebar__menu-link_active(href="/")
            svg(class="sidebar__menu-link-icon icon" width="24" height="24")
              use(xlink:href="wp-content/themes/trading/august/img/svg/symbol/sprite.svg#home")
            | Главная
        li.sidebar__menu-item
          a.sidebar__menu-link(href="/webinars/")
            svg(class="sidebar__menu-link-icon icon" width="24" height="24")
              use(xlink:href="wp-content/themes/trading/august/img/svg/symbol/sprite.svg#queue")
            | Вебинары
        li.sidebar__menu-item
          a.sidebar__menu-link(href="/courses/")
            svg(class="sidebar__menu-link-icon icon" width="24" height="24")
              use(xlink:href="wp-content/themes/trading/august/img/svg/symbol/sprite.svg#book")
